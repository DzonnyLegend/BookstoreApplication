@model List<Book>

<h2>Dostupne Knjige</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Naziv</th>
            <th>Autor</th>
            <th>Cena</th>
            <th>Količina</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Quantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId">Detalji</a>
                </td>
            </tr>
        }
    </tbody>
</table>
